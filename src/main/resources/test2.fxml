<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.paint.*?>

<AnchorPane fx:id="mainPane" prefHeight="500.0" prefWidth="650.0"
            style="-fx-background-color: #f5f9ff;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.esprit.controllers.test2">

   <!-- En-tête avec titre stylisé -->
   <Label layoutX="220.0" layoutY="30.0" text="Truck Smart System"
          style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2a4a7a;">
      <font>
         <Font name="System Bold" size="24.0"/>
      </font>
   </Label>

   <!-- Icône de camion -->
   <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="180.0" layoutY="30.0" preserveRatio="true">
      <image>
         <Image url="@/images/truck-icon.png"/>
      </image>
   </ImageView>

   <!-- Conteneur du formulaire -->
   <VBox layoutX="150.0" layoutY="90.0" spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);" prefWidth="350.0">
      <!-- Capacité Max -->
      <HBox spacing="10" alignment="CENTER_LEFT">
         <Label text="Capacité Max:" style="-fx-font-weight: bold; -fx-min-width: 100;"/>
         <TextField fx:id="TC" style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-pref-width: 200;" promptText="en kg"/>
      </HBox>

      <!-- Niveau Remplissage -->
      <HBox spacing="10" alignment="CENTER_LEFT">
         <Label text="Remplissage:" style="-fx-font-weight: bold; -fx-min-width: 100;"/>
         <TextField fx:id="TST" style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-pref-width: 200;" promptText="0-100%"/>
      </HBox>

      <!-- Section -->
      <HBox spacing="10" alignment="CENTER_LEFT">
         <Label text="Section:" style="-fx-font-weight: bold; -fx-min-width: 100;"/>
         <TextField fx:id="TR" style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-pref-width: 200;"/>
      </HBox>

      <!-- Statut -->
      <HBox spacing="10" alignment="CENTER_LEFT">
         <Label text="Statut:" style="-fx-font-weight: bold; -fx-min-width: 100;"/>
         <TextField fx:id="TS" style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-pref-width: 200;"/>
      </HBox>

      <!-- Bouton Ajouter -->
      <Button fx:id="addButton" text="AJOUTER" onAction="#handleAddButton"
              style="-fx-background-color: #4a7bd8; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 20; -fx-font-size: 14px;">
         <HBox.margin>
            <Insets top="15.0" left="0.0" right="0.0"/>
         </HBox.margin>
      </Button>
   </VBox>
</AnchorPane>