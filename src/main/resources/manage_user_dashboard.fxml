<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800" prefWidth="1200" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.esprit.controllers.ManageUserDashboardController">
    <stylesheets>
        <URL value="@styles/common.css" />
        <URL value="@styles/admin_dashboard_fixed.css" />
        <URL value="@styles/manage_users.css" />
        <URL value="@styles/table.css" />
    </stylesheets>

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="70" spacing="20" styleClass="header">
            <padding>
                <Insets left="30" right="30" />
            </padding>
            <Label styleClass="header-title" text="Manage Users" />
            <HBox alignment="CENTER_RIGHT" spacing="15" HBox.hgrow="ALWAYS">
                <Label fx:id="lblUsername" styleClass="header-username" />
            </HBox>
        </HBox>
    </top>

    <left>
        <VBox styleClass="sidebar">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label styleClass="sidebar-title" text="Menu">
                <VBox.margin>
                    <Insets bottom="20" />
                </VBox.margin>
            </Label>

            <Button fx:id="btnDashboard" onAction="#handleDashboard" styleClass="sidebar-button" text="ðŸ  Dashboard">
                <VBox.margin>
                    <Insets bottom="10" />
                </VBox.margin>
            </Button>

            <Button fx:id="btnManageUsers" onAction="#handleManageUsers" styleClass="sidebar-button, selected" text="ðŸ‘¥ Manage Users">
                <VBox.margin>
                    <Insets bottom="10" />
                </VBox.margin>
            </Button>

            <Button fx:id="btnProducts" onAction="#handleProducts" styleClass="sidebar-button" text="ðŸ“¦ Products">
                <VBox.margin>
                    <Insets bottom="10" />
                </VBox.margin>
            </Button>

            <Button fx:id="btnEvents" onAction="#handleEvents" styleClass="sidebar-button" text="ðŸŽ‰ Events">
                <VBox.margin>
                    <Insets bottom="10" />
                </VBox.margin>
            </Button>

            <Button fx:id="btnBlog" onAction="#handleBlog" styleClass="sidebar-button" text="ðŸ“ Blog">
                <VBox.margin>
                    <Insets bottom="10" />
                </VBox.margin>
            </Button>

            <Button fx:id="btnReports" onAction="#handleReports" styleClass="sidebar-button" text="ðŸ“Š Reports">
                <VBox.margin>
                    <Insets bottom="10" />
                </VBox.margin>
            </Button>

            <Button fx:id="btnSettings" onAction="#handleSettings" styleClass="sidebar-button" text="âš™ï¸ Settings">
                <VBox.margin>
                    <Insets bottom="10" />
                </VBox.margin>
            </Button>

            <Region VBox.vgrow="ALWAYS" />

            <Button fx:id="btnLogout" onAction="#handleLogout" styleClass="sidebar-button" text="ðŸšª Logout" />
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" styleClass="main-content-scroll">
            <VBox spacing="30" styleClass="main-content">
                <padding>
                    <Insets bottom="30" left="40" right="40" top="30" />
                </padding>

                <!-- Search and Add User Section -->
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <TextField fx:id="tfSearch" promptText="Search users..." styleClass="search-box" HBox.hgrow="ALWAYS" />
                    <Button fx:id="btnAddUserManageDashboard" onAction="#handleAddUser" styleClass="action-button, add-button" text="Add User" />
                </HBox>

                <!-- Users Table -->
                <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
                    <TableView fx:id="userTable" styleClass="table-view" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colNom" prefWidth="120" text="Nom">
                                <cellValueFactory>
                                    <PropertyValueFactory property="nom" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="colPrenom" prefWidth="120" text="PrÃ©nom">
                                <cellValueFactory>
                                    <PropertyValueFactory property="prenom" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="colEmail" prefWidth="155.00001525878906" text="Email">
                                <cellValueFactory>
                                    <PropertyValueFactory property="email" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="colRole" prefWidth="124.99996948242188" text="Role">
                                <cellValueFactory>
                                    <PropertyValueFactory property="role" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="colAddress" prefWidth="150" text="Address">
                                <cellValueFactory>
                                    <PropertyValueFactory property="address" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="colPhoneNumber" prefWidth="104.0" text="Phone">
                                <cellValueFactory>
                                    <PropertyValueFactory property="phoneNumber" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="colStatus" prefWidth="116.0" text="Status">
                                <cellValueFactory>
                                    <PropertyValueFactory property="status" />
                                </cellValueFactory>
                            </TableColumn>
                        </columns>
                        <placeholder>
                            <Label styleClass="placeholder" text="No users found" />
                        </placeholder>
                    </TableView>
                </VBox>

                <!-- Action Buttons -->
                <HBox alignment="CENTER" spacing="15">
                    <Button fx:id="btnModifyUser" onAction="#handleModifyUser" styleClass="action-button, edit-button" text="Modify User" />
                    <Button fx:id="btnDeleteUser" onAction="#handleDeleteUser" styleClass="action-button, delete-button" text="Delete User" />
                </HBox>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
