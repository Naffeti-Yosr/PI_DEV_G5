<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:id="mainContainer"
      fx:controller="com.esprit.controllers.EventController"
      spacing="20" style="-fx-padding: 20;"
      stylesheets="/styles/EventsView.css">

    <!-- Barre de recherche -->
    <VBox fx:id="searchContainer" spacing="10" alignment="CENTER">
        <Label text="📅 Liste des Événements" styleClass="header-title"/>
        <TextField fx:id="searchField" promptText="🔍 Rechercher un événement..." maxWidth="400"/>
    </VBox>

    <!-- Liste responsive -->
    <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="scroll">
        <FlowPane fx:id="eventsFlowPane"
                  hgap="20" vgap="20"
                  prefWrapLength="600"
                  styleClass="grid-container"/>
    </ScrollPane>
</VBox>