<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.esprit.controllers.ProductFormController"
      spacing="20" styleClass="root" style="-fx-padding: 20;" stylesheets="@../styles/styles.css">

    <HBox alignment="CENTER" spacing="15" style="-fx-padding: 0 0 15 0;">
        <ImageView fitWidth="40" fitHeight="40" preserveRatio="true">
            <image>
                <Image url="@../images/eco-icon.png"/>
            </image>
        </ImageView>
        <Label text="Renewable Energy Product" 
               styleClass="title" 
               style="-fx-font-size: 24px; -fx-text-fill: #0d3b1e; -fx-font-weight: bold;"/>
    </HBox>

    <GridPane hgap="15" vgap="15" style="-fx-padding: 0 0 15 0;">
        <Label text="Product Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="text-field"/>
        
        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
        <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="text-field"/>
        
        <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
        <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="text-field"/>
        
        <Label text="Stock:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;"/>
        <TextField fx:id="stockField" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="text-field"/>
        
        <Label text="Eco-Friendly:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-weight: bold;"/>
        <CheckBox fx:id="recyclableCheck" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="check-box"/>
        
        <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="5" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="categoryCombo" GridPane.columnIndex="1" GridPane.rowIndex="5" prefWidth="200" promptText="Select Category" styleClass="combo-box"/>
        
        <Label text="Product Image:" GridPane.columnIndex="0" GridPane.rowIndex="6" style="-fx-font-weight: bold;"/>
        <HBox GridPane.columnIndex="1" GridPane.rowIndex="6" spacing="10" alignment="CENTER_LEFT">
            <ImageView fx:id="productImage" fitWidth="150" fitHeight="150" preserveRatio="true" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);"/>
            <Button text="Browse Image" onAction="#handleBrowseImage" styleClass="btn-browse-image" graphicTextGap="5">
                <graphic>
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <image>
                            <Image url="@../images/add-icon.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button text="Delete Image" onAction="#handleDeleteImage" styleClass="btn-delete-image" graphicTextGap="5">
                <graphic>
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <image>
                            <Image url="@../images/delete-icon.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </GridPane>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Save Product" onAction="#handleSave" styleClass="btn-save-product" graphicTextGap="5">
            <graphic>
                <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                    <image>
                        <Image url="@../images/export-icon.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button text="Cancel" onAction="#handleCancel" styleClass="btn-cancel" graphicTextGap="5">
            <graphic>
                <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                    <image>
                        <Image url="@../images/delete-icon.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>
</VBox>
