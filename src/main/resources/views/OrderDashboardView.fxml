<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.esprit.controllers.OrderDashboardController"
      spacing="15"
      styleClass="dashboard-root"
      stylesheets="@/styles/product-dashboard.css">

   <!-- Header -->
<!-- Header -->
<HBox alignment="CENTER_LEFT" spacing="10" styleClass="header">
    <ImageView fitWidth="80" fitHeight="80">
        <Image url="images/logo.png"/>
    </ImageView>
    <Label text="Solaris Orders Dashboard" styleClass="header-title"/>
</HBox>

<!-- Filter Toolbar -->
<HBox spacing="15" styleClass="toolbar">
    <ComboBox fx:id="clientCombo" promptText="Select Client" styleClass="client-combo"/>
    <ComboBox fx:id="statusCombo" promptText="Select Status" styleClass="status-combo"/>
</HBox>

<!-- Orders Table -->
<TableView fx:id="orderTable" styleClass="order-table" editable="true">
    <columns>
        <TableColumn fx:id="clientColumn" text="Client" prefWidth="200" sortable="true" reorderable="false"/>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150" sortable="true" reorderable="false"/>
        <TableColumn fx:id="statusColumn" text="Status" prefWidth="150" sortable="true" reorderable="false"/>
    </columns>
</TableView>

<!-- Action Buttons -->
<HBox spacing="15" styleClass="action-bar">
    <Button text="Preview Order" onAction="#handlePreview" styleClass="btn-prev-order" disable="true" fx:id="previewButton"/>
</HBox>
</VBox>
