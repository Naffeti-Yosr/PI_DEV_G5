<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800" prefWidth="1200" stylesheets="styles/common.css,styles/admin_dashboard_fixed.css,styles/table.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.ClaimsController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="70" spacing="20" styleClass="header">
            <padding>
                <Insets left="30" right="30" />
            </padding>
            <Label styleClass="header-title" text="Claims Management" />
        </HBox>
    </top>

    <left>
        <VBox styleClass="sidebar">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            
            <Label styleClass="sidebar-title" text="Menu">
                <VBox.margin>
                    <Insets bottom="20" />
                </VBox.margin>
            </Label>
            
            <Button fx:id="btnDashboard" onAction="#handleDashboard" styleClass="sidebar-button" text="🏠 Dashboard">
                <VBox.margin>
                    <Insets bottom="10" />
                </VBox.margin>
            </Button>
            
            <Button fx:id="btnManageUsers" onAction="#handleManageUsers" styleClass="sidebar-button" text="👥 Manage Users">
                <VBox.margin>
                    <Insets bottom="10" />
                </VBox.margin>
            </Button>
            
            <Button fx:id="btnProducts" onAction="#handleProducts" styleClass="sidebar-button" text="📦 Products">
                <VBox.margin>
                    <Insets bottom="10" />
                </VBox.margin>
            </Button>
            
            <Button fx:id="btnEvents" onAction="#handleEvents" styleClass="sidebar-button" text="🎉 Events">
                <VBox.margin>
                    <Insets bottom="10" />
                </VBox.margin>
            </Button>
            
            <Button fx:id="btnBlog" onAction="#handleBlog" styleClass="sidebar-button" text="📝 Blog">
                <VBox.margin>
                    <Insets bottom="10" />
                </VBox.margin>
            </Button>
            
            <Button fx:id="btnReports" onAction="#handleReports" styleClass="sidebar-button" text="📊 Reports">
                <VBox.margin>
                    <Insets bottom="10" />
                </VBox.margin>
            </Button>

            <Button fx:id="btnClaims" onAction="#handleClaims" styleClass="sidebar-button, selected" text="📢 Claims">
                <VBox.margin>
                    <Insets bottom="10" />
                </VBox.margin>
            </Button>
            
            <Button fx:id="btnSettings" onAction="#handleSettings" styleClass="sidebar-button" text="⚙️ Settings">
                <VBox.margin>
                    <Insets bottom="10" />
                </VBox.margin>
            </Button>
            
            <Region VBox.vgrow="ALWAYS" />
            
            <Button fx:id="btnLogout" onAction="#handleLogout" styleClass="sidebar-button" text="🚪 Logout" />
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" styleClass="main-content-scroll">
            <VBox spacing="20" styleClass="main-content">
                <padding>
                    <Insets bottom="30" left="40" right="40" top="30" />
                </padding>

                <TableView fx:id="claimsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="80" text="Tiecket" />
                        <TableColumn fx:id="colUserId" prefWidth="100" text="nom &amp; prenom" />
                        <TableColumn fx:id="colReport" prefWidth="500" text="Report" />
                        <TableColumn fx:id="colStatus" prefWidth="150" text="Status" />
                        <TableColumn fx:id="colCreatedAt" prefWidth="200" text="Created At" />
                    </columns>
                    <placeholder>
                        <Label text="No claims found" />
                    </placeholder>
                </TableView>

                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button fx:id="btnRefresh" styleClass="action-button" text="Refresh" />
                </HBox>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
