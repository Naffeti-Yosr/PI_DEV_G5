<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600" prefWidth="900" styleClass="root" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.LoginController">
    <stylesheets>
        <URL value="@styles/energy.css" />
    </stylesheets>

    <GridPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <columnConstraints>
            <ColumnConstraints percentWidth="60" />
            <ColumnConstraints percentWidth="40" />
        </columnConstraints>

        <!-- Left Panel -->
        <VBox alignment="CENTER" prefHeight="800.0" prefWidth="1200.0" spacing="30" styleClass="welcome-panel" GridPane.columnIndex="0">
            <padding>
                <Insets bottom="50" left="50" right="50" top="50" />
            </padding>

            <ImageView fitHeight="150" fitWidth="150" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@logo/logo.jpg" />
                </image>
            </ImageView>

            <Text styleClass="app-title" text="Solaris App" />
            <Text styleClass="welcome-text" text="Bienvenue dans votre espace énergie" />
            <Text styleClass="slogan-text" text="Gérez votre énergie intelligemment" />
        </VBox>

        <!-- Right Panel - Login Form -->
        <VBox alignment="CENTER" spacing="25" styleClass="login-panel" GridPane.columnIndex="1">
            <padding>
                <Insets bottom="50" left="40" right="40" top="50" />
            </padding>

            <Text styleClass="login-title" text="Connexion" />

            <VBox maxWidth="300" spacing="20">
                <VBox spacing="8">
                    <Label styleClass="input-label" text="Email" />
                    <TextField fx:id="tfEmail" promptText="Votre email" styleClass="modern-input" />
                </VBox>

                <VBox spacing="8">
                    <Label styleClass="input-label" text="Mot de passe" />
                    <PasswordField fx:id="tfPassword" promptText="Votre mot de passe" styleClass="modern-input" />
                </VBox>

                <HBox alignment="CENTER_RIGHT">
                    <Hyperlink onAction="#handleForgetPassword" styleClass="forgot-password" text="Mot de passe oublié ?" />
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <CheckBox fx:id="cbRememberMe" text="Se souvenir de moi" />
                </HBox>

                <Button maxWidth="Infinity" onAction="#handleLogin" styleClass="login-button" text="SE CONNECTER" />

                <HBox alignment="CENTER" spacing="10">
                    <Label styleClass="register-text" text="Pas encore de compte ?" />
                    <Button onAction="#handleRegister" styleClass="register-button" text="S'inscrire" />
                </HBox>
            </VBox>

            <VBox alignment="CENTER" spacing="5">
                <Label styleClass="footer-text" text="powered by solaris.org" />
                <Label styleClass="version-text" text="Version 0.5" />
            </VBox>
        </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>
</AnchorPane>
