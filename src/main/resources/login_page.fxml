<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<AnchorPane prefHeight="600" prefWidth="900" styleClass="root" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.LoginController">
    <stylesheets>
        <URL value="@styles/energy.css"/>
    </stylesheets>

    <GridPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <columnConstraints>
            <ColumnConstraints percentWidth="60"/>
            <ColumnConstraints percentWidth="40"/>
        </columnConstraints>

        <!-- Left Panel -->
        <VBox styleClass="welcome-panel" alignment="CENTER" spacing="30" GridPane.columnIndex="0">
            <padding>
                <Insets top="50" bottom="50" left="50" right="50"/>
            </padding>

            <ImageView fitHeight="150" fitWidth="150" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@logo/logo.jpg"/>
                </image>
            </ImageView>

            <Text styleClass="app-title" text="Solaris App"/>
            <Text styleClass="welcome-text" text="Bienvenue dans votre espace énergie"/>
            <Text styleClass="slogan-text" text="Gérez votre énergie intelligemment"/>
        </VBox>

        <!-- Right Panel - Login Form -->
        <VBox styleClass="login-panel" alignment="CENTER" spacing="25" GridPane.columnIndex="1">
            <padding>
                <Insets top="50" bottom="50" left="40" right="40"/>
            </padding>

            <Text styleClass="login-title" text="Connexion"/>

            <VBox spacing="20" maxWidth="300">
                <VBox spacing="8">
                    <Label styleClass="input-label" text="Email"/>
                    <TextField fx:id="tfEmail" styleClass="modern-input" promptText="Votre email"/>
                </VBox>

                <VBox spacing="8">
                    <Label styleClass="input-label" text="Mot de passe"/>
                    <PasswordField fx:id="tfPassword" styleClass="modern-input" promptText="Votre mot de passe"/>
                </VBox>

                <HBox alignment="CENTER_RIGHT">
                    <Hyperlink styleClass="forgot-password" text="Mot de passe oublié ?"/>
                </HBox>

                <Button styleClass="login-button" onAction="#handleLogin" text="SE CONNECTER" maxWidth="Infinity"/>

                <HBox alignment="CENTER" spacing="10">
                    <Label styleClass="register-text" text="Pas encore de compte ?"/>
                    <Button styleClass="register-button" onAction="#handleRegister" text="S'inscrire"/>
                </HBox>
            </VBox>

            <VBox alignment="CENTER" spacing="5">
                <Label styleClass="footer-text" text="powered by solaris.org"/>
                <Label styleClass="version-text" text="Version 0.5"/>
            </VBox>
        </VBox>
    </GridPane>
</AnchorPane>